#!/bin/bash
# macemu-webrtc runner script
# Runs the server from ~/.macemu/

MACEMU_DIR="$HOME/.macemu"

# Check if setup has been run
if [ ! -d "$MACEMU_DIR" ]; then
    echo "Error: macemu environment not initialized"
    echo "Please run: macemu-webrtc-setup"
    exit 1
fi

# Change to macemu directory
cd "$MACEMU_DIR"

# Run the server
exec "$MACEMU_DIR/bin/macemu-webrtc-server" "$@"
